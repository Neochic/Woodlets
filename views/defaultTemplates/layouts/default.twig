<!DOCTYPE html>
<html {% block htmlAttributes %}{% endblock %}>
<head>
    {% block head %}
        {{ woodlets.wp_head() }}
        {% block titleTag %}
            <title>{% block title %}{{ woodlets.wp_get_document_title()|raw }}{% endblock %}</title>
        {% endblock %}
        {% block baseTag %}
            <base href="{{ woodlets.get_home_url() }}" />
        {% endblock %}
        {% block viewport %}
            <meta name="viewport" content="width=device-width, user-scalable=yes">
        {% endblock %}
        {% block style %}
            <link rel="stylesheet" href="{{ woodlets.get_stylesheet_uri() }}" type="text/css" media="all" />
        {% endblock %}
    {% endblock %}
</head>
<body {{ woodlets.body_class() }}>
{% block body %}
    {% block layout %}
        {% block content %}
            {% block view %}{% endblock %}
        {% endblock %}
    {% endblock %}
    {{ woodlets.wp_footer() }}
{% endblock %}
</body>
</html>
