{% extends '@woodlets/fieldType.twig' %}

{% block field %}
    <p class="{% block fieldTypeExtraClass %}{{ parent() }}{% endblock %}">
        <label for="{{ id }}">
            <input id="{{ id }}" {{ macros.nameOrLink(customizer, name) }} type="checkbox" value="1"{% if value %} checked="checked"{% endif %} />
            {{ field.config.label ?: field.name }}
        </label>
    </p>
{% endblock %}
